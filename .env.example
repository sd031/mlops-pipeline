# Database Configuration
DATABASE_URL=sqlite:///./mlops.db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mlops
POSTGRES_USER=mlops_user
POSTGRES_PASSWORD=mlops_password

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=churn_prediction
MLFLOW_ARTIFACT_ROOT=./models/artifacts

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Model Configuration
MODEL_REGISTRY_PATH=./models/registry
MODEL_ARTIFACTS_PATH=./models/artifacts
DEFAULT_MODEL_VERSION=latest

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
MONITORING_INTERVAL=300

# Data Configuration
DATA_SOURCE_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
FEATURE_STORE_PATH=./data/features

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/mlops.log

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Feature Flags
ENABLE_MONITORING=true
ENABLE_DRIFT_DETECTION=true
ENABLE_ALERTS=true
ENABLE_EXPERIMENTS=true
