{
  "id": null,
  "title": "MLOps Pipeline Dashboard",
  "tags": ["mlops", "monitoring"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Total API Requests/min",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m])) * 60",
          "legendFormat": "Total Requests/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Prediction Requests/min",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{endpoint=~\"/predict.*\"}[5m])) * 60",
          "legendFormat": "Prediction Requests/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 5,
      "title": "Total Predictions Made",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(model_predictions_total)",
          "legendFormat": "Total Predictions"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
    },
    {
      "id": 6,
      "title": "Avg Response Time",
      "type": "stat",
      "targets": [
        {
          "expr": "avg(rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m]))",
          "legendFormat": "Avg Response Time"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
    },
    {
      "id": 3,
      "title": "Request Rate by Endpoint",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Response Time Percentiles",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{endpoint=~\"/predict.*\"}[5m]))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{endpoint=~\"/predict.*\"}[5m]))",
          "legendFormat": "50th percentile"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 7,
      "title": "Model Predictions Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(model_predictions_total[5m])",
          "legendFormat": "{{prediction_type}} predictions/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "schemaVersion": 30,
  "version": 1,
  "uid": "mlops-dashboard"
}
